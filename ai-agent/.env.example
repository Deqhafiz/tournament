# AI Agent Configuration
# Copy this file to .env and fill in your credentials

# ========================================
# LLM Provider (choose one)
# ========================================

# Option 1: Groq API (recommended for cloud-based Llama 3)
GROQ_API_KEY=your_groq_api_key_here

# Option 2: Ollama (for local Llama 3)
# Just install and run Ollama locally - no key needed
# Download from: https://ollama.ai


# ========================================
# Twitter API Credentials
# ========================================
# Get from: https://developer.twitter.com/

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token


# ========================================
# Crypto Wallets (Optional)
# ========================================

# Ethereum Wallet
ETH_PRIVATE_KEY=your_ethereum_private_key_without_0x
ETH_RPC_URL=https://eth.llamarpc.com

# Solana Wallet
SOL_PRIVATE_KEY=your_solana_private_key_base58
SOL_RPC_URL=https://api.mainnet-beta.solana.com


# ========================================
# Agent Configuration
# ========================================

# Loop timing (in minutes)
MIN_WAIT_MINUTES=15
MAX_WAIT_MINUTES=120

# Action probability (0.0 to 1.0)
ACTION_PROBABILITY=0.7

# Model selection
LLM_MODEL=llama3
# Options: llama3, llama3-70b, llama3-8b
